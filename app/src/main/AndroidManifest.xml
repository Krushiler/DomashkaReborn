<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.domashkareborn">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/coffee_logo_circle_little"
        android:label="@string/app_name"
        android:roundIcon="@drawable/coffee_logo_circle_little"
        android:supportsRtl="true"
        android:theme="@style/Theme.DomashkaReborn">
        <activity android:name=".screen.SplashActivity" android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.LoginActivity"></activity>
        <activity android:name=".screen.MainActivity"></activity>
    </application>

</manifest>